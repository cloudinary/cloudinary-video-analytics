{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
            "ES2021",
            "dom"
        ],
        "module": "CommonJS",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ES2021"
    },
    "exclude": ["node_modules"]
}
